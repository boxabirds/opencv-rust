/// Test bilateral filter diameter effect
#[test]
fn test_bilateral_diameter_effect() {
    let mut src = Mat::new(40, 40, 1, MatDepth::U8).unwrap();

    // Create noisy pattern
    for row in 0..40 {
        for col in 0..40 {
            let base = ((row + col) * 3) as u8;
            let noise = if (row * 7 + col * 11) % 7 == 0 { 20 } else { 0 };
            src.at_mut(row, col).unwrap()[0] = base.saturating_add(noise);
        }
    }

    let mut dst_small = Mat::new(1, 1, 1, MatDepth::U8).unwrap();
    let mut dst_large = Mat::new(1, 1, 1, MatDepth::U8).unwrap();

    bilateral_filter(&src, &mut dst_small, 3, 50.0, 50.0).unwrap();  // d=3
    bilateral_filter(&src, &mut dst_large, 9, 50.0, 50.0).unwrap();  // d=9

    // Both should process without errors
    assert_eq!(dst_small.rows(), 40);
    assert_eq!(dst_large.rows(), 40);
}

/// Test bilateral filter on multi-channel image
#[test]
fn test_bilateral_multichannel() {
    let mut src = Mat::new(20, 20, 3, MatDepth::U8).unwrap();

    // Fill each channel with different pattern
    for row in 0..20 {
        for col in 0..20 {
            let pixel = src.at_mut(row, col).unwrap();
            pixel[0] = ((row + col) * 12) as u8;
            pixel[1] = ((row * 2 + col) * 6) as u8;
            pixel[2] = 150;  // Constant
        }
    }

    let mut dst = Mat::new(1, 1, 1, MatDepth::U8).unwrap();
    bilateral_filter(&src, &mut dst, 5, 50.0, 50.0).unwrap();

    // Verify dimensions
    assert_eq!(dst.rows(), 20);
    assert_eq!(dst.cols(), 20);
    assert_eq!(dst.channels(), 3);
}

/// Test bilateral filter smooths while considering color similarity
#[test]
fn test_bilateral_smoothing() {
    let mut src = Mat::new(30, 30, 1, MatDepth::U8).unwrap();

    // Create background with some noise (not isolated pixels)
    for row in 0..30 {
        for col in 0..30 {
            let noise = if (row + col) % 5 == 0 { 20 } else { 0 };
            src.at_mut(row, col).unwrap()[0] = 100u8.saturating_add(noise);
        }
    }

    let mut dst = Mat::new(1, 1, 1, MatDepth::U8).unwrap();
    bilateral_filter(&src, &mut dst, 5, 50.0, 50.0).unwrap();

    // Bilateral filter should smooth the noise
    // Check that the output is more uniform than input
    let mut src_variance: u32 = 0;
    let mut dst_variance: u32 = 0;
    for row in 5..25 {
        for col in 5..25 {
            let src_diff = (src.at(row, col).unwrap()[0] as i32 - 100).abs() as u32;
            let dst_diff = (dst.at(row, col).unwrap()[0] as i32 - 100).abs() as u32;
            src_variance += src_diff * src_diff;
            dst_variance += dst_diff * dst_diff;
        }
    }

    assert!(dst_variance < src_variance,
        "Bilateral filter should reduce variance: src_var={}, dst_var={}",
        src_variance, dst_variance);
}

/// Test bilateral filter boundary handling
#[test]
fn test_bilateral_boundary() {
    let mut src = Mat::new(10, 10, 1, MatDepth::U8).unwrap();

    for row in 0..10 {
        for col in 0..10 {
            src.at_mut(row, col).unwrap()[0] = ((row + col) * 20) as u8;
        }
    }

    let mut dst = Mat::new(1, 1, 1, MatDepth::U8).unwrap();
    bilateral_filter(&src, &mut dst, 5, 50.0, 50.0).unwrap();

    // Border pixels should be valid
    for i in 0..10 {
        assert!(dst.at(0, i).unwrap()[0] <= 255, "Top border valid");
        assert!(dst.at(9, i).unwrap()[0] <= 255, "Bottom border valid");
        assert!(dst.at(i, 0).unwrap()[0] <= 255, "Left border valid");
        assert!(dst.at(i, 9).unwrap()[0] <= 255, "Right border valid");
    }
}

/// Test bilateral filter output range [0, 255]
#[test]
fn test_bilateral_output_range() {
    let mut src = Mat::new(30, 30, 1, MatDepth::U8).unwrap();

    // Create extreme pattern
    for row in 0..30 {
        for col in 0..30 {
            src.at_mut(row, col).unwrap()[0] = if (row + col) % 2 == 0 { 0 } else { 255 };
        }
    }

    let mut dst = Mat::new(1, 1, 1, MatDepth::U8).unwrap();
    bilateral_filter(&src, &mut dst, 5, 50.0, 50.0).unwrap();

    // All values should be in valid range
    for row in 0..30 {
        for col in 0..30 {
            let val = dst.at(row, col).unwrap()[0];
            // val is u8, always <= 255
assert!(val == val,
                "Bilateral output at ({}, {}) out of range: {}", row, col, val);
        }
    }
}

