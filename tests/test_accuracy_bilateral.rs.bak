#[allow(unused_comparisons)]
/// Bit-level accuracy tests for Bilateral Filter
/// These tests verify that optimizations don't change results
mod test_utils;

use opencv_rust::core::{Mat, MatDepth};
use opencv_rust::core::types::Scalar;
use opencv_rust::imgproc::bilateral_filter;
use test_utils::*;

/// Test bilateral filter is deterministic
#[test]
fn test_bilateral_deterministic() {
    let mut src = Mat::new(30, 30, 1, MatDepth::U8).unwrap();

    // Create pattern
    for row in 0..30 {
        for col in 0..30 {
            src.at_mut(row, col).unwrap()[0] = ((row + col) * 8) as u8;
        }
    }

    let mut dst1 = Mat::new(1, 1, 1, MatDepth::U8).unwrap();
    let mut dst2 = Mat::new(1, 1, 1, MatDepth::U8).unwrap();

    bilateral_filter(&src, &mut dst1, 5, 50.0, 50.0).unwrap();
    bilateral_filter(&src, &mut dst2, 5, 50.0, 50.0).unwrap();

    // Results should be bit-exact identical
    assert_images_equal(&dst1, &dst2, "Bilateral filter should be deterministic");
}

/// Test bilateral filter on uniform image
#[test]
fn test_bilateral_uniform_image() {
    let src = Mat::new_with_default(30, 30, 1, MatDepth::U8, Scalar::all(128.0)).unwrap();
    let mut dst = Mat::new(1, 1, 1, MatDepth::U8).unwrap();

    bilateral_filter(&src, &mut dst, 5, 50.0, 50.0).unwrap();

    // Uniform image should remain uniform (within rounding tolerance)
    for row in 0..30 {
        for col in 0..30 {
            let val = dst.at(row, col).unwrap()[0];
            assert!((val as i32 - 128).abs() <= 1,
                "Uniform image should remain ~128 at ({}, {}), got {}", row, col, val);
        }
    }
}

/// Test bilateral filter preserves edges while smoothing
#[test]
fn test_bilateral_edge_preservation() {
    let mut src = Mat::new(40, 40, 1, MatDepth::U8).unwrap();

    // Create sharp vertical edge with noise on both sides
    for row in 0..40 {
        for col in 0..20 {
            let noise = if (row + col) % 5 == 0 { 10 } else { 0 };
            src.at_mut(row, col).unwrap()[0] = 50u8.saturating_add(noise);
        }
        for col in 20..40 {
            let noise = if (row + col) % 5 == 0 { 10 } else { 0 };
            src.at_mut(row, col).unwrap()[0] = 200u8.saturating_add(noise);
        }
    }

    let mut dst = Mat::new(1, 1, 1, MatDepth::U8).unwrap();
    bilateral_filter(&src, &mut dst, 5, 50.0, 50.0).unwrap();

    // Edge should be preserved - left and right regions should remain distinct
    let mut left_sum: u32 = 0;
    let mut right_sum: u32 = 0;
    for row in 5..15 {
        for col in 5..15 {
            left_sum += dst.at(row, col).unwrap()[0] as u32;
        }
        for col in 25..35 {
            right_sum += dst.at(row, col).unwrap()[0] as u32;
        }
    }
    let left_avg = left_sum / 100;
    let right_avg = right_sum / 100;

    assert!(right_avg > left_avg + 50,
        "Edge should be preserved: left_avg={}, right_avg={}", left_avg, right_avg);
}

/// Test bilateral filter sigma_color effect
#[test]
fn test_bilateral_sigma_color_effect() {
    let mut src = Mat::new(30, 30, 1, MatDepth::U8).unwrap();

    // Create pattern with edges
    for row in 0..30 {
        for col in 0..30 {
            let value = if col < 15 { 50 } else { 200 };
            src.at_mut(row, col).unwrap()[0] = value;
        }
    }

    let mut dst_low = Mat::new(1, 1, 1, MatDepth::U8).unwrap();
    let mut dst_high = Mat::new(1, 1, 1, MatDepth::U8).unwrap();

    bilateral_filter(&src, &mut dst_low, 5, 10.0, 50.0).unwrap();   // Low sigma_color
    bilateral_filter(&src, &mut dst_high, 5, 100.0, 50.0).unwrap(); // High sigma_color

    // Both should process without errors
    assert_eq!(dst_low.rows(), 30);
    assert_eq!(dst_high.rows(), 30);
}

